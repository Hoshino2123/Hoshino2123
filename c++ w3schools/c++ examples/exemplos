int main() {
  cout << "Hello World!";
  cout << "I am learning C++";
  return 0;
}
nova linha \n:
#include <iostream>
using namespace std;

int main() {
  cout << "Hello World! \n";
  cout << "I am learning C++";
  return 0;
}
endl:
#include <iostream>
using namespace std;

int main() {
  cout << "Hello World!" << endl;
  cout << "I am learning C++";
  return 0;
}
